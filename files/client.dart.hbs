  factory FireboomClient.createClient({BaseClientOptions? config}) {
    var client = FireboomClient(
      BaseClientOptions(
        baseURL: config?.baseURL ?? "http://localhost:9991",
        csrfEnabled: true,
        onInit: config?.onInit,
      ),
    );

    return client;
  }
}

